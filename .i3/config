client.focused              #1a1a1a #3b3b3b #fefecc #3b3b3b
client.focused_inactive     #1a1a1a #1a1a1a #fefecc #1a1a1a
client.unfocused            #1a1a1a #1a1a1a #fefecc #1a1a1a
client.urgent               #1a1a1a #9ab66d #fefecc #9ab66d

